<Window x:Class="ImageDeduplicator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageDeduplicator"
        mc:Ignorable="d"
        Title="IMAGE DEDUPLICATOR" Height="750" Width="960"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" GlassFrameThickness="-1" CornerRadius="10" />
    </WindowChrome.WindowChrome>

    <Border CornerRadius="10" BorderThickness="1" BorderBrush="#33FFFFFF" ClipToBounds="True" Background="#F21A1A1A">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=WindowState}" Value="Maximized">
                        <Setter Property="Padding" Value="8"/>
                        <Setter Property="CornerRadius" Value="0"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Border Background="#1AFFFFFF" Opacity="0.03">
                <Border.Effect>
                    <BlurEffect Radius="60" KernelType="Gaussian"/>
                </Border.Effect>
            </Border>

            <DockPanel LastChildFill="True">
                <Grid DockPanel.Dock="Top" Height="32" Background="#1A252525">
                    <TextBlock Text="IMAGE DEDUPLICATOR" VerticalAlignment="Center" Margin="15,0"
                               Foreground="White" FontSize="11" FontWeight="Bold"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button x:Name="MinimizeButton" Content="—" Click="Minimize_Click" 
                                Width="46" Background="Transparent" Foreground="LightGray" 
                                FontSize="10" VerticalContentAlignment="Center"
                                BorderThickness="0" WindowChrome.IsHitTestVisibleInChrome="True">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                        </Button>
                        <Button x:Name="MaximizeButton" Content="🗖" Click="Maximize_Click" 
                                Width="46" Background="Transparent" Foreground="LightGray" 
                                BorderThickness="0" WindowChrome.IsHitTestVisibleInChrome="True">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                        </Button>
                        <Button Content="✕" Click="Close_Click" Width="46" 
                                Background="Transparent" Foreground="Crimson" 
                                BorderThickness="0" WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>

                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="SearchPathTextBox" Height="32" VerticalContentAlignment="Center" 
                                     Background="#442D2D2D" Foreground="White" BorderBrush="#555" Padding="8,0"/>
                            <Button x:Name="SearchButton" Grid.Column="1" Content="SCAN FOLDER" Width="130" Margin="10,0,0,0" 
                                    Click="SelectFolder_Click" Background="DarkTurquoise" Foreground="Black" FontWeight="ExtraBold"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Similarity Threshold:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>

                            <TextBlock Text="{Binding ElementName=ThresholdSlider, Path=Value}" 
                                VerticalAlignment="Center" 
                                Width="25" 
                                Foreground="DarkTurquoise" 
                                FontWeight="Bold" 
                                FontSize="14" 
                                TextAlignment="Center" 
                                Margin="0,0,5,0"/>

                            <Slider x:Name="ThresholdSlider" 
                                Width="256" 
                                Minimum="0" 
                                Maximum="50" 
                                Value="15" 
                                Foreground="DarkTurquoise"
                                IsSnapToTickEnabled="True" 
                                TickFrequency="1" 
                                VerticalAlignment="Center"
                                MouseLeftButtonUp="ThresholdSlider_MouseLeftButtonUp"/>
                        </StackPanel>
                    </StackPanel>

                    <ListView Grid.Row="1" x:Name="SimilarImagesList" ItemsSource="{Binding SimilarImages}" 
                              Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <Border Background="#3300CED1" Margin="0,10,0,5" Padding="8,4" CornerRadius="4">
                                            <TextBlock Text="{Binding Name}" Foreground="DarkTurquoise" FontWeight="Bold" FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListView.GroupStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1AFFFFFF" CornerRadius="5" Margin="0,2" Padding="12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Background="#00000000" CornerRadius="4" Height="90" Width="90" VerticalAlignment="Top">
                                            <Image Source="{Binding Thumbnail}" Stretch="Uniform" Margin="2" MouseDown="Image_MouseDown"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                            <TextBlock Text="{Binding FilePath}" Foreground="White" FontWeight="Bold" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4">
                                                <TextBlock Text="{Binding DisplaySize}" Foreground="#CCC" FontSize="11"/>
                                                <TextBlock Text=" | " Foreground="#666" Margin="6,0"/>
                                                <TextBlock Text="{Binding Dimensions}" Foreground="DarkTurquoise" FontSize="11" FontWeight="SemiBold"/>
                                            </StackPanel>
                                            <Grid Margin="0,10,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <CheckBox Grid.Column="1" 
                                                    IsChecked="{Binding IsSelected}" 
                                                    VerticalAlignment="Center" 
                                                    HorizontalAlignment="Center"
                                                    Margin="0,0,5,0"/>
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <TextBlock x:Name="StatusText" Text="Awaiting orders" Foreground="#AAA" VerticalAlignment="Center" FontStyle="Italic"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="SelectNoneButton" Content="SELECT NONE" Click="SelectNone_Click" Margin="0,0,10,0" Padding="15,6" Background="#333" Foreground="White" BorderThickness="0"/>
                            <Button x:Name="SelectDupButton" Content="SELECT DUPLICATES" Click="SelectDuplicatesOnly_Click" Margin="0,0,10,0" Padding="15,6" Background="#2A2A2A" Foreground="DarkTurquoise" FontWeight="Bold" BorderBrush="DarkTurquoise" BorderThickness="1"/>
                            <Button x:Name="DeleteButton" Content="DELETE SELECTED" Click="DeleteSelected_Click" Margin="0,0,10,0" Padding="15,6" Background="#2A2A2A" Foreground="Crimson" FontWeight="Bold" BorderBrush="Crimson" BorderThickness="1"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </DockPanel>
        </Grid>
    </Border>
</Window>